<div class="main-container">
  <h1>Update task</h1>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="inline">
      <%= f.check_box :completed %>
      <%= f.label "Mark as completed" %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>

  <div class="box">
    <span>
      <i class="fas fa-undo-alt" ></i><%= link_to "Back to all tasks", tasks_path %>
    </span>
  </div>

</div>
